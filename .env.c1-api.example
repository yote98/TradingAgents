# C1 Backend API Configuration
# Copy this file to .env and fill in your values

# ============================================
# Required Configuration
# ============================================

# OpenAI API Key (required for analysis endpoint)
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# Server Configuration
# ============================================

# Server host (default: 0.0.0.0 for all interfaces)
API_HOST=0.0.0.0

# Server port (default: 5000)
API_PORT=5000

# Debug mode (true/false, default: false)
# WARNING: Never enable in production!
DEBUG_MODE=false

# ============================================
# CORS Configuration
# ============================================

# Allowed CORS origins (comma-separated)
# Add your frontend URL here
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Mock Mode (for testing without Discord)
# ============================================

# Use mock data instead of real Discord (true/false, default: false)
# Set to true for development without Discord bot
USE_MOCK_MODE=true

# ============================================
# Discord Configuration (optional)
# ============================================

# Discord bot token (only needed if USE_MOCK_MODE=false)
# Get this from Discord Developer Portal
DISCORD_BOT_TOKEN=

# ============================================
# Performance Configuration
# ============================================

# Request timeout in seconds (default: 120)
REQUEST_TIMEOUT=120

# Coach plans cache TTL in seconds (default: 30)
COACH_PLANS_CACHE_TTL=30

# ============================================
# Twitter Integration Configuration
# ============================================

# Twitter data cache TTL in seconds (default: 300 = 5 minutes)
TWITTER_CACHE_TTL=300

# Maximum tweets to return per request (default: 100)
TWITTER_MAX_TWEETS=100

# Rate limit for Twitter endpoints (requests per minute, default: 60)
TWITTER_RATE_LIMIT=60

# Default Twitter accounts to monitor (comma-separated, no @ symbol)
# These are pre-configured trusted financial accounts
TWITTER_DEFAULT_ACCOUNTS=ChartChampions,unusual_whales,TradingView,Benzinga,MarketWatch

# Stocktwits API token (optional, leave empty to use public API)
STOCKTWITS_API_TOKEN=

# ============================================
# Alpha Vantage (optional, for stock data)
# ============================================

# Alpha Vantage API key (optional)
ALPHA_VANTAGE_API_KEY=
