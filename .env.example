ALPHA_VANTAGE_API_KEY=alpha_vantage_api_key_placeholder
OPENAI_API_KEY=openai_api_key_placeholder

# ============================================================================
# Discord Integration Configuration
# ============================================================================

# Discord Bot Token (for receiving coach plans with charts)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Discord Webhook URLs for Coach Daily Plans
# These webhooks should point to your custom server that receives Discord messages
# and exposes them via a GET API endpoint
DISCORD_COACH_D_WEBHOOK=https://your-server.com/api/coach-plans/
DISCORD_COACH_I_WEBHOOK=https://your-server.com/api/coach-plans/
DISCORD_COACH_S_WEBHOOK=https://your-server.com/api/coach-plans/
DISCORD_COACH_N_WEBHOOK=https://your-server.com/api/coach-plans/

# Discord Webhook URL for sending trading summaries back to Discord
DISCORD_SUMMARY_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# ============================================================================
# Enhanced Discord Bot Server Configuration (Optional)
# ============================================================================

# Database Configuration
DATABASE_PATH=./data/coach_plans.db

# API Server Configuration
API_PORT=5000
API_HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/discord_bot.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Cache Configuration
CACHE_TTL_SECONDS=3600
MAX_CACHE_SIZE=100

# Connection Configuration
RECONNECT_ATTEMPTS=5
RECONNECT_DELAY_SECONDS=5
CONNECTION_TIMEOUT=10

# Chart Attachments
MAX_CHART_ATTACHMENTS=10

# Mock Mode (set to true for testing without Discord)
MOCK_MODE=false